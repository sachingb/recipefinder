<h1>Searching for - <%= @search_term %></h1>
<p>Powered By Food2Fork.com</p>

<table border = "1">
	<tr>
		<th>Image</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes.each do |rec| %>
		<tr class=<%= cycle('even', 'odd') %>>
			<td>
				<%= link_to "#{image_tag(rec["image_url"], size: "100x100")}".html_safe, rec["source_url"] %>
			</td>
			<td>
				<%= link_to "#{formatted_title(rec["title"])}".html_safe, rec["source_url"] %>
			</td>
			<td><%= rec["social_rank"] %></td>
		</tr>
	<% end %>
</table>
